extends ../base.pug

block main
    div.login-form.container
        hgroup
            h1 로그인
            h2 등록된 이메일과 비밀번호를 입력하세요
        form
            input(type='text', name='email', placeholder='이메일', aria-label='이메일', autocomplete='email', required)
            input(type='password', name='password', placeholder='비밀번호', aria-label='비밀번호', autocomplete='current-password', required)
            fieldset
                label(for='remember') 이메일 기억
                    input#remember(type='checkbox', role='switch', name='remember')
            button(type='submit', onclick='event.preventDefault()') 로그인