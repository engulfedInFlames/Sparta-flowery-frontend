extends ../base.pug

block main
    .container
        .grid
            each article in articles
                a(href=`/${article.pk}`)
                    article.grid-card
                        img(src='https://images.unsplash.com/photo-1468327768560-75b778cbb551?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=387&q=80', alt='A Flower')
                        div
                            span #{article.title}
                            div
                            span #{article.user}
                            span #{article.created_at}